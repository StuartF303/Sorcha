<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>13</LangVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <Description>MongoDB warm/cold-tier storage implementation for the Sorcha platform</Description>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Sorcha.Storage.Abstractions\Sorcha.Storage.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MongoDB.Driver" Version="3.1.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="10.0.0-preview.7.24407.12" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="10.0.0-preview.7.24407.12" />
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="10.0.0-preview.7.24407.12" />
  </ItemGroup>

</Project>
