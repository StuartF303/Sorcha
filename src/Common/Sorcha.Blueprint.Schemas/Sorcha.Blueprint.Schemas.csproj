<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>13</LangVersion>
    <RootNamespace>Sorcha.Blueprint.Schemas</RootNamespace>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <!-- CS1591: Suppress missing XML doc warnings for internal types; public API is documented -->
    <NoWarn>$(NoWarn);CS1591</NoWarn>
    <Description>Schema management with storage, caching, and external integration for the Sorcha platform</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="JsonSchema.Net" Version="8.0.5" />
    <PackageReference Include="MongoDB.Driver" Version="3.6.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="10.0.2" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="10.0.2" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="10.0.2" />
    <PackageReference Include="Microsoft.Extensions.Caching.Abstractions" Version="10.0.2" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.2" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Sorcha.Blueprint.Schemas.Tests" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="SystemSchemas\*.schema.json" />
  </ItemGroup>

</Project>
