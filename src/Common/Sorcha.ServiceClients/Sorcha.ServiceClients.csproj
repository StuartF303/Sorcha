<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>13</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <!-- gRPC and HTTP client dependencies -->
    <PackageReference Include="Grpc.Net.Client" Version="2.76.0" />
    <PackageReference Include="Grpc.Tools" Version="2.76.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Google.Protobuf" Version="3.33.4" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="10.0.2" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="10.0.2" />
  </ItemGroup>

  <ItemGroup>
    <!-- Reference common models -->
    <ProjectReference Include="..\Sorcha.Register.Models\Sorcha.Register.Models.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- Peer Service protos — generate Both (client + server + messages) so that
         Peer.Service can reference these types instead of compiling the same protos,
         which would produce duplicate message types (CS0436). -->
    <Protobuf Include="..\..\Services\Sorcha.Peer.Service\Protos\peer_communication.proto" GrpcServices="Both" Link="Protos\peer_communication.proto" />
    <Protobuf Include="..\..\Services\Sorcha.Peer.Service\Protos\peer_discovery.proto" GrpcServices="Both" Link="Protos\peer_discovery.proto" />
  </ItemGroup>

</Project>
