@page "/"
@using Sorcha.Blueprint.Designer.Client.Services
@using Sorcha.Blueprint.Designer.Client.Components
@inject NavigationManager Navigation
@inject EventLogService EventLog

<PageTitle>Home - Sorcha Blueprint</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudGrid>
        <!-- Left Column - Main Content -->
        <MudItem xs="12" md="8">
            <!-- Hero Section -->
            <MudPaper Class="pa-6 mb-4" Elevation="2">
                <MudText Typo="Typo.h3" Class="mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.AccountTree" Size="Size.Large" Class="mr-2" Style="vertical-align: middle;" />
                    Welcome to Sorcha Blueprint
                </MudText>
                <MudText Typo="Typo.body1" Color="Color.Secondary" Class="mb-4">
                    Design, manage, and deploy blockchain workflow blueprints with our visual designer.
                    Create multi-party workflows with conditional logic, participant management, and data schema validation.
                </MudText>

                <!-- Call-to-Action Buttons -->
                <div class="d-flex gap-3 flex-wrap">
                    <MudButton StartIcon="@Icons.Material.Filled.Add"
                               Color="Color.Primary"
                               Variant="Variant.Filled"
                               Size="Size.Large"
                               OnClick="@(() => Navigation.NavigateTo("/designer"))">
                        Create New Blueprint
                    </MudButton>
                    <MudButton StartIcon="@Icons.Material.Filled.FolderOpen"
                               Color="Color.Info"
                               Variant="Variant.Outlined"
                               Size="Size.Large"
                               OnClick="@(() => Navigation.NavigateTo("/designer"))">
                        Load Existing Blueprint
                    </MudButton>
                    <MudButton StartIcon="@Icons.Material.Filled.Search"
                               Color="Color.Default"
                               Variant="Variant.Outlined"
                               Size="Size.Large"
                               OnClick="@(() => Navigation.NavigateTo("/schemas"))">
                        Search Data Schemas
                    </MudButton>
                </div>
            </MudPaper>

            <!-- Quick Start Guide -->
            <MudPaper Class="pa-4 mb-4" Elevation="2">
                <MudText Typo="Typo.h5" Class="mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Rocket" Class="mr-2" />
                    Quick Start
                </MudText>

                <MudTimeline TimelineOrientation="TimelineOrientation.Vertical" TimelinePosition="TimelinePosition.Start">
                    <MudTimelineItem Color="Color.Primary" Size="Size.Small">
                        <ItemContent>
                            <MudText Typo="Typo.body1" Class="mb-1"><strong>1. Create a Blueprint</strong></MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                Click "Create New Blueprint" to start designing your workflow
                            </MudText>
                        </ItemContent>
                    </MudTimelineItem>
                    <MudTimelineItem Color="Color.Primary" Size="Size.Small">
                        <ItemContent>
                            <MudText Typo="Typo.body1" Class="mb-1"><strong>2. Add Participants</strong></MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                Define the parties involved in your workflow
                            </MudText>
                        </ItemContent>
                    </MudTimelineItem>
                    <MudTimelineItem Color="Color.Primary" Size="Size.Small">
                        <ItemContent>
                            <MudText Typo="Typo.body1" Class="mb-1"><strong>3. Design Actions</strong></MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                Add actions with conditions, calculations, and data schemas
                            </MudText>
                        </ItemContent>
                    </MudTimelineItem>
                    <MudTimelineItem Color="Color.Success" Size="Size.Small">
                        <ItemContent>
                            <MudText Typo="Typo.body1" Class="mb-1"><strong>4. Save & Deploy</strong></MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                Save your blueprint and deploy to the blockchain
                            </MudText>
                        </ItemContent>
                    </MudTimelineItem>
                </MudTimeline>
            </MudPaper>

            <!-- Features Overview -->
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h5" Class="mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Star" Class="mr-2" />
                    Key Features
                </MudText>

                <MudGrid>
                    <MudItem xs="12" sm="6">
                        <div class="d-flex mb-3">
                            <MudIcon Icon="@Icons.Material.Filled.AccountTree" Color="Color.Primary" Class="mr-2" />
                            <div>
                                <MudText Typo="Typo.subtitle2">Visual Designer</MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">
                                    Drag-and-drop interface for workflow design
                                </MudText>
                            </div>
                        </div>
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <div class="d-flex mb-3">
                            <MudIcon Icon="@Icons.Material.Filled.Schema" Color="Color.Primary" Class="mr-2" />
                            <div>
                                <MudText Typo="Typo.subtitle2">JSON Schema Support</MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">
                                    Validate data with JSON Schema standards
                                </MudText>
                            </div>
                        </div>
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <div class="d-flex mb-3">
                            <MudIcon Icon="@Icons.Material.Filled.Calculate" Color="Color.Primary" Class="mr-2" />
                            <div>
                                <MudText Typo="Typo.subtitle2">JSON Logic</MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">
                                    Conditional logic and calculations
                                </MudText>
                            </div>
                        </div>
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <div class="d-flex mb-3">
                            <MudIcon Icon="@Icons.Material.Filled.People" Color="Color.Primary" Class="mr-2" />
                            <div>
                                <MudText Typo="Typo.subtitle2">Multi-Party Workflows</MudText>
                                <MudText Typo="Typo.body2" Color="Color.Secondary">
                                    Manage complex participant interactions
                                </MudText>
                            </div>
                        </div>
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>

        <!-- Right Column - Activity & News -->
        <MudItem xs="12" md="4">
            <div class="d-flex flex-column gap-4">
                <ActivityLog MaxEvents="5" />
                <ReleaseNotes />
            </div>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    protected override void OnInitialized()
    {
        EventLog.LogInfo("Welcome to Sorcha Blueprint Designer", "Application started");
    }
}
