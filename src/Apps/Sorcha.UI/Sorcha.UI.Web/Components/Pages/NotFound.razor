@page "/not-found"
@layout Sorcha.UI.Web.Components.Layout.PublicLayout

<PageTitle>Page Not Found - Sorcha</PageTitle>

<div class="not-found">
    <div class="container text-center">
        <h1>404</h1>
        <h2>Page Not Found</h2>
        <p class="lead">The page you're looking for doesn't exist.</p>
        <a href="/" class="btn btn-primary">Go Home</a>
    </div>
</div>

<style>
    .not-found {
        padding: 4rem 2rem;
    }
    .not-found h1 {
        font-size: 6rem;
        color: #667eea;
    }
</style>
