@page "/login"
@rendermode RenderMode.InteractiveServer
@layout Sorcha.UI.Web.Components.Layout.AuthLayout
@using System.Net.Http.Json
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Sign In - Sorcha</PageTitle>

<div class="login-card">
    <div class="login-header">
        <h2 class="login-title">Sign In</h2>
        <p class="login-subtitle">Access your Sorcha account</p>
    </div>

    <div class="login-body">
        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-danger">@_errorMessage</div>
        }

        <div class="mb-3">
            <label class="form-label">Environment</label>
            <select class="form-select" @bind="_profileName">
                <option value="Development">Development (localhost:7082)</option>
                <option value="Docker">Docker (same origin)</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" class="form-control" @bind="_username" 
                   placeholder="Enter your username" autocomplete="username" />
        </div>

        <div class="mb-4">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" @bind="_password" 
                   placeholder="Enter your password" autocomplete="current-password" />
        </div>

        <button class="btn btn-primary w-100 btn-lg" @onclick="HandleLogin" disabled="@_isLoading">
            @if (_isLoading)
            {
                <span class="spinner-border spinner-border-sm me-2"></span>
                <span>Signing in...</span>
            }
            else
            {
                <span>Sign In</span>
            }
        </button>
        
        <div class="text-center mt-3">
            <a href="/" class="text-muted">Back to Home</a>
        </div>
    </div>
</div>

<style>
    .login-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        max-width: 400px;
        margin: 0 auto;
    }

    .login-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        text-align: center;
    }

    .login-title {
        font-size: 2rem;
        font-weight: 600;
        margin: 0 0 0.5rem 0;
    }

    .login-subtitle {
        margin: 0;
        opacity: 0.9;
    }

    .login-body {
        padding: 2rem;
    }

    .login-body .form-label {
        font-weight: 500;
    }

    .login-body .form-control,
    .login-body .form-select {
        padding: 0.75rem 1rem;
    }
</style>

@code {
    private string _username = "";
    private string _password = "";
    private string _profileName = "Development";
    private string _errorMessage = "";
    private bool _isLoading = false;

    private async Task HandleLogin()
    {
        _errorMessage = "";
        _isLoading = true;

        try
        {
            var apiGatewayUrl = _profileName == "Development"
                ? "https://localhost:7082"
                : "";

            // Use JavaScript fetch so the browser receives the Set-Cookie header
            var result = await JSRuntime.InvokeAsync<LoginResult>("performLogin", new
            {
                username = _username,
                password = _password,
                profileName = _profileName,
                apiGatewayUrl = apiGatewayUrl
            });

            if (result.Success)
            {
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                _errorMessage = result.Error ?? "Invalid username or password";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Login failed: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private class LoginResult
    {
        public bool Success { get; set; }
        public string? Error { get; set; }
    }
}
