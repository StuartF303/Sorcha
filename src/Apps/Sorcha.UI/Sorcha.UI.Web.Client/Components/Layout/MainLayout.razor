@inherits LayoutComponentBase
@implements IAsyncDisposable
@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor
@using Sorcha.UI.Core.Services.Authentication
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject ITokenRefreshService TokenRefreshService
@inject IJSRuntime JSRuntime

<MudThemeProvider Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<CascadingAuthenticationState>
<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h5" Class="ml-3" Style="cursor: pointer;" @onclick="@(() => Navigation.NavigateTo("dashboard"))">Sorcha</MudText>
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                <MudMenu Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight">
                    <MudMenuItem>
                        <div class="d-flex flex-column py-2 px-3">
                            <MudText Typo="Typo.body2" Color="Color.Primary">@context.User.Identity?.Name</MudText>
                            <MudText Typo="Typo.caption" Class="mt-1">@GetUserRole(context)</MudText>
                        </div>
                    </MudMenuItem>
                    <MudDivider />
                    <MudMenuItem Icon="@Icons.Material.Filled.Settings" OnClick="@(() => Navigation.NavigateTo("settings"))">
                        Settings
                    </MudMenuItem>
                    <MudMenuItem Icon="@Icons.Material.Filled.Logout" OnClick="@HandleLogout">
                        Logout
                    </MudMenuItem>
                </MudMenu>
            </Authorized>
            <NotAuthorized>
                <MudButton Href="auth/login" Variant="Variant.Text" Color="Color.Inherit" StartIcon="@Icons.Material.Filled.Login">
                    Sign In
                </MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Never" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Navigation</MudText>
        </MudDrawerHeader>
        <AuthorizeView>
            <Authorized>
                <MudNavMenu>
                    <MudNavLink Href="dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">
                        Dashboard
                    </MudNavLink>
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.overline" Class="px-4 mud-text-secondary">MY ACTIVITY</MudText>
                    <MudNavLink Href="my-actions" Icon="@Icons.Material.Filled.Task">
                        Pending Actions
                    </MudNavLink>
                    <MudNavLink Href="my-workflows" Icon="@Icons.Material.Filled.AccountTree">
                        My Workflows
                    </MudNavLink>
                    <MudNavLink Href="my-transactions" Icon="@Icons.Material.Filled.Receipt">
                        My Transactions
                    </MudNavLink>
                    <MudNavLink Href="my-wallet" Icon="@Icons.Material.Filled.AccountBalanceWallet">
                        My Wallet
                    </MudNavLink>
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.overline" Class="px-4 mud-text-secondary">DESIGNER</MudText>
                    <MudNavGroup Title="Blueprints" Icon="@Icons.Material.Filled.Description" Expanded="false">
                        <MudNavLink Href="blueprints" Icon="@Icons.Material.Filled.List">
                            All Blueprints
                        </MudNavLink>
                        <MudNavLink Href="designer" Icon="@Icons.Material.Filled.Add">
                            Visual Designer
                        </MudNavLink>
                        <MudNavLink Href="designer/chat" Icon="@Icons.Material.Filled.SmartToy">
                            AI Chat Designer
                        </MudNavLink>
                    </MudNavGroup>
                    <MudNavLink Href="templates" Icon="@Icons.Material.Filled.ContentCopy">
                        Templates
                    </MudNavLink>
                    <MudNavLink Href="schemas" Icon="@Icons.Material.Filled.Schema">
                        Schema Library
                    </MudNavLink>
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.overline" Class="px-4 mud-text-secondary">MANAGEMENT</MudText>
                    <MudNavGroup Title="Wallets" Icon="@Icons.Material.Filled.AccountBalanceWallet" Expanded="false">
                        <MudNavLink Href="wallets" Icon="@Icons.Material.Filled.List">
                            All Wallets
                        </MudNavLink>
                        <MudNavLink Href="wallets/create" Icon="@Icons.Material.Filled.Add">
                            Create Wallet
                        </MudNavLink>
                        <MudNavLink Href="wallets/recover" Icon="@Icons.Material.Filled.Restore">
                            Recover Wallet
                        </MudNavLink>
                    </MudNavGroup>
                    <MudNavLink Href="registers" Icon="@Icons.Material.Filled.Storage">
                        Registers
                    </MudNavLink>
                    <MudNavLink Href="participants" Icon="@Icons.Material.Filled.People">
                        Participants
                    </MudNavLink>
                    <MudDivider Class="my-2" />
                    <MudText Typo="Typo.overline" Class="px-4 mud-text-secondary">ADMIN</MudText>
                    <MudNavGroup Title="Administration" Icon="@Icons.Material.Filled.AdminPanelSettings" Expanded="false">
                        <MudNavLink Href="admin/health" Icon="@Icons.Material.Filled.HealthAndSafety">
                            System Health
                        </MudNavLink>
                        <MudNavLink Href="admin/peers" Icon="@Icons.Material.Filled.Hub">
                            Peer Network
                        </MudNavLink>
                        <MudNavLink Href="admin/organizations" Icon="@Icons.Material.Filled.Business">
                            Organizations
                        </MudNavLink>
                        <MudNavLink Href="admin/validator" Icon="@Icons.Material.Filled.VerifiedUser">
                            Validator
                        </MudNavLink>
                        <MudNavLink Href="admin/principals" Icon="@Icons.Material.Filled.VpnKey">
                            Service Principals
                        </MudNavLink>
                    </MudNavGroup>
                    <MudDivider Class="my-2" />
                    <MudNavLink Href="settings" Icon="@Icons.Material.Filled.Settings">
                        Settings
                    </MudNavLink>
                    <MudNavLink Href="help" Icon="@Icons.Material.Filled.Help">
                        Help & Support
                    </MudNavLink>
                </MudNavMenu>
            </Authorized>
            <NotAuthorized>
                <MudNavMenu>
                    <MudNavLink Href="auth/login" Icon="@Icons.Material.Filled.Login">
                        Sign In
                    </MudNavLink>
                </MudNavMenu>
            </NotAuthorized>
        </AuthorizeView>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
</CascadingAuthenticationState>

@code {
    private bool _drawerOpen = true;
    private bool _tokenRefreshStarted;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_tokenRefreshStarted)
        {
            _tokenRefreshStarted = true;
            await TokenRefreshService.StartAsync(JSRuntime);
        }
    }

    public async ValueTask DisposeAsync()
    {
        await TokenRefreshService.StopAsync();
    }

    private readonly MudTheme _theme = new()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#667eea",
            Secondary = "#764ba2",
            AppbarBackground = "#667eea",
        },
        PaletteDark = new PaletteDark()
        {
            Primary = "#667eea",
            Secondary = "#764ba2",
        }
    };

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    private string GetUserRole(AuthenticationState authState)
    {
        var roleClaim = authState.User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role);
        return roleClaim?.Value ?? "User";
    }

    private void HandleLogout()
    {
        // Navigate to logout page using relative path
        Navigation.NavigateTo("auth/logout", forceLoad: false);
    }
}
