@page "/"
@page "/dashboard"
@layout MainLayout
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@attribute [Authorize]
@using Microsoft.AspNetCore.Components.Authorization
@using Sorcha.UI.Web.Client.Components.Layout

<PageTitle>Dashboard - Sorcha</PageTitle>

<div class="dashboard">
    <CascadingAuthenticationState>
        <AuthorizeView>
            <Authorized>
                <h2>Welcome back, @context.User.Identity?.Name!</h2>

                <div class="dashboard-stats">
                    <div class="stat-card">
                        <div class="stat-icon">ðŸ“‹</div>
                        <div class="stat-content">
                            <div class="stat-value">0</div>
                            <div class="stat-label">Blueprints</div>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon">ðŸ‘›</div>
                        <div class="stat-content">
                            <div class="stat-value">0</div>
                            <div class="stat-label">Wallets</div>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon">ðŸ“Š</div>
                        <div class="stat-content">
                            <div class="stat-value">0</div>
                            <div class="stat-label">Transactions</div>
                        </div>
                    </div>
                </div>

                <div class="dashboard-actions">
                    <h3>Quick Actions</h3>
                    <div class="action-buttons">
                        <a href="designer" class="btn btn-primary">
                            Create Blueprint
                        </a>
                        <a href="wallets" class="btn btn-outline-primary">
                            Manage Wallets
                        </a>
                        <a href="transactions" class="btn btn-outline-secondary">
                            View Transactions
                        </a>
                    </div>
                </div>

                <div class="dashboard-recent">
                    <h3>Recent Activity</h3>
                    <div class="empty-state">
                        <p class="text-muted">No recent activity</p>
                    </div>
                </div>
            </Authorized>
            <NotAuthorized>
                <Sorcha.UI.Web.Client.Components.RedirectToLogin />
            </NotAuthorized>
        </AuthorizeView>
    </CascadingAuthenticationState>
</div>

