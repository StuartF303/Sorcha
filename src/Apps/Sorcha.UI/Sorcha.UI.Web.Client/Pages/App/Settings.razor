@page "/app/settings"
@attribute [Authorize]
@using Sorcha.UI.Core.Services.Authentication

<PageTitle>Settings - Sorcha</PageTitle>

<div class="page-content">
    <h1>Settings</h1>
    <p class="lead">Configure your account and preferences</p>

    <div class="settings-section">
        <h3>Profile</h3>
        <div class="card">
            <div class="card-body">
                <p><strong>Active Profile:</strong> @_profileName</p>
            </div>
        </div>
    </div>

    <div class="settings-section">
        <h3>Session</h3>
        <div class="card">
            <div class="card-body">
                <form method="post" action="/api/auth/logout">
                    <button type="submit" class="btn btn-danger">Sign Out</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .page-content { padding: 2rem; }
    .settings-section { margin-bottom: 2rem; }
    .settings-section h3 { margin-bottom: 1rem; }
</style>

@code {
    private string _profileName = "Development";
}
