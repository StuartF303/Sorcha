@page "/admin/dashboard"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@attribute [Authorize]
@attribute [Authorize(Roles = "Administrator,SystemAdmin")]

<PageTitle>System Dashboard - Sorcha Platform</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-2">
        <MudIcon Icon="@Icons.Material.Filled.Dashboard" Class="mr-2" />
        System Dashboard
    </MudText>
    <MudText Typo="Typo.body1" Color="Color.Secondary" Class="mb-4">
        Monitor system health and performance metrics
    </MudText>

    <MudGrid>
        <!-- Service Status Cards -->
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h6" Class="mb-2">Blueprint Service</MudText>
                <MudChip T="string" Color="Color.Success" Icon="@Icons.Material.Filled.CheckCircle">Online</MudChip>
                <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mt-2">
                    Uptime: 99.98%
                </MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h6" Class="mb-2">Wallet Service</MudText>
                <MudChip T="string" Color="Color.Success" Icon="@Icons.Material.Filled.CheckCircle">Online</MudChip>
                <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mt-2">
                    Uptime: 99.95%
                </MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h6" Class="mb-2">Register Service</MudText>
                <MudChip T="string" Color="Color.Success" Icon="@Icons.Material.Filled.CheckCircle">Online</MudChip>
                <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mt-2">
                    Uptime: 99.99%
                </MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h6" Class="mb-2">Peer Service</MudText>
                <MudChip T="string" Color="Color.Success" Icon="@Icons.Material.Filled.CheckCircle">Online</MudChip>
                <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mt-2">
                    Uptime: 99.92%
                </MudText>
            </MudPaper>
        </MudItem>

        <!-- Performance Metrics -->
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h6" Class="mb-3">Performance Metrics</MudText>
                <MudSimpleTable Dense="true">
                    <tbody>
                        <tr>
                            <td>Total Requests (24h)</td>
                            <td><strong>45,678</strong></td>
                        </tr>
                        <tr>
                            <td>Avg Response Time</td>
                            <td><strong>124ms</strong></td>
                        </tr>
                        <tr>
                            <td>Error Rate</td>
                            <td><MudChip T="string" Size="Size.Small" Color="Color.Success">0.12%</MudChip></td>
                        </tr>
                        <tr>
                            <td>CPU Usage</td>
                            <td><strong>34%</strong></td>
                        </tr>
                        <tr>
                            <td>Memory Usage</td>
                            <td><strong>2.4GB / 8GB</strong></td>
                        </tr>
                    </tbody>
                </MudSimpleTable>
            </MudPaper>
        </MudItem>

        <!-- System Statistics -->
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h6" Class="mb-3">System Statistics</MudText>
                <MudSimpleTable Dense="true">
                    <tbody>
                        <tr>
                            <td>Total Users</td>
                            <td><strong>42</strong></td>
                        </tr>
                        <tr>
                            <td>Active Workflows</td>
                            <td><strong>127</strong></td>
                        </tr>
                        <tr>
                            <td>Blueprints</td>
                            <td><strong>38</strong></td>
                        </tr>
                        <tr>
                            <td>Transactions (24h)</td>
                            <td><strong>1,234</strong></td>
                        </tr>
                        <tr>
                            <td>Wallets Created</td>
                            <td><strong>89</strong></td>
                        </tr>
                    </tbody>
                </MudSimpleTable>
            </MudPaper>
        </MudItem>

        <MudItem xs="12">
            <MudAlert Severity="Severity.Info">
                <MudText Typo="Typo.body2">
                    This is a placeholder page. Real-time monitoring and detailed metrics will be implemented in future versions.
                </MudText>
            </MudAlert>
        </MudItem>
    </MudGrid>
</MudContainer>

