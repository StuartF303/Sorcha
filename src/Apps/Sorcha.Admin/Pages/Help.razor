@page "/help"

<PageTitle>Help & Support - Sorcha Platform</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-2">
        <MudIcon Icon="@Icons.Material.Filled.Help" Class="mr-2" />
        Help & Support
    </MudText>
    <MudText Typo="Typo.body1" Color="Color.Secondary" Class="mb-4">
        Find answers and get assistance
    </MudText>

    <MudGrid>
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4 mb-4" Elevation="2">
                <MudText Typo="Typo.h6" Class="mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.MenuBook" Class="mr-2" />
                    Documentation
                </MudText>
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Article" Href="#">
                        <MudText Typo="Typo.subtitle2">Getting Started Guide</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Learn the basics of Sorcha Platform</MudText>
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Article" Href="#">
                        <MudText Typo="Typo.subtitle2">Blueprint Designer Tutorial</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Create your first workflow</MudText>
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Article" Href="#">
                        <MudText Typo="Typo.subtitle2">API Reference</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Complete API documentation</MudText>
                    </MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4 mb-4" Elevation="2">
                <MudText Typo="Typo.h6" Class="mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.QuestionAnswer" Class="mr-2" />
                    FAQs
                </MudText>
                <MudExpansionPanels>
                    <MudExpansionPanel Text="What is a Blueprint?">
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            A blueprint is a workflow definition that specifies the sequence of actions, participants, and data schemas required to execute a multi-party process on the distributed ledger.
                        </MudText>
                    </MudExpansionPanel>
                    <MudExpansionPanel Text="How do I create a workflow?">
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Use the Blueprint Designer to visually create workflows by adding actions, defining participants, and configuring data schemas. Then save and deploy your blueprint.
                        </MudText>
                    </MudExpansionPanel>
                    <MudExpansionPanel Text="What cryptographic algorithms are supported?">
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Sorcha supports ED25519, NIST P-256, and RSA-4096 for cryptographic operations, with HD wallet support via BIP32/BIP39/BIP44.
                        </MudText>
                    </MudExpansionPanel>
                    <MudExpansionPanel Text="How do I manage my wallet?">
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            Navigate to My Wallet in the Consumer workspace to view your wallet address, manage keys, and configure security settings.
                        </MudText>
                    </MudExpansionPanel>
                </MudExpansionPanels>
            </MudPaper>
        </MudItem>

        <MudItem xs="12">
            <MudPaper Class="pa-4 mb-4" Elevation="2">
                <MudText Typo="Typo.h6" Class="mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.ContactSupport" Class="mr-2" />
                    Contact Support
                </MudText>
                <MudGrid>
                    <MudItem xs="12" md="4">
                        <MudText Typo="Typo.subtitle2" Class="mb-2">Email Support</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            support@sorcha.io
                        </MudText>
                        <MudText Typo="Typo.caption" Color="Color.Secondary">
                            Response time: 24 hours
                        </MudText>
                    </MudItem>
                    <MudItem xs="12" md="4">
                        <MudText Typo="Typo.subtitle2" Class="mb-2">Community Forum</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            community.sorcha.io
                        </MudText>
                        <MudText Typo="Typo.caption" Color="Color.Secondary">
                            Ask questions and share knowledge
                        </MudText>
                    </MudItem>
                    <MudItem xs="12" md="4">
                        <MudText Typo="Typo.subtitle2" Class="mb-2">GitHub Issues</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            github.com/sorcha/platform
                        </MudText>
                        <MudText Typo="Typo.caption" Color="Color.Secondary">
                            Report bugs and request features
                        </MudText>
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>

        <MudItem xs="12">
            <MudPaper Class="pa-4" Elevation="2">
                <MudText Typo="Typo.h6" Class="mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Info" Class="mr-2" />
                    About Sorcha Platform
                </MudText>
                <MudText Typo="Typo.body2" Class="mb-2">
                    <strong>Version:</strong> 1.0.0-alpha
                </MudText>
                <MudText Typo="Typo.body2" Class="mb-2">
                    <strong>Build:</strong> 2025.01.15
                </MudText>
                <MudText Typo="Typo.body2">
                    Sorcha is a distributed ledger platform designed for secure, multi-party workflows with cryptographic integrity and selective disclosure.
                </MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

