@using Microsoft.AspNetCore.Components.Authorization
@using Sorcha.Admin.Components.Authentication

<CascadingAuthenticationState>
    <AuthenticationStateSerialization />
    <MudThemeProvider />
    <MudDialogProvider />
    <MudSnackbarProvider />

    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (routeData.PageType.GetCustomAttributes(typeof(AuthorizeAttribute), true).Any())
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not Found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudContainer Class="mt-8">
                    <MudText Typo="Typo.h4">Page Not Found</MudText>
                    <MudText Typo="Typo.body1" Class="mt-4">
                        Sorry, there's nothing at this address.
                    </MudText>
                    <MudButton Href="/" Color="Color.Primary" Variant="Variant.Filled" Class="mt-4">
                        Go to Homepage
                    </MudButton>
                </MudContainer>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }
}
