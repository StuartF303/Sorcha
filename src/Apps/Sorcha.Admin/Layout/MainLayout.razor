@using Sorcha.Admin.Components.Authentication
@using Sorcha.Admin.Services.Authentication
@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                       OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6" Class="ml-3">Sorcha Blueprint Designer</MudText>
        <MudSpacer />

        <!-- Profile Selector (Environment Switcher) -->
        <ProfileSelector />

        <!-- User Profile Menu (Login/Logout) -->
        <UserProfileMenu />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Elevation="1" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="pa-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    [Inject] private CustomAuthenticationStateProvider AuthStateProvider { get; set; } = default!;
    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;

    private bool _drawerOpen = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("console.log", "[MainLayout] OnAfterRenderAsync called - firstRender");

                // Explicitly trigger authentication state retrieval and notification
                // This ensures the auth state is loaded from LocalStorage in new isolated circuits
                await JSRuntime.InvokeVoidAsync("console.log", "[MainLayout] Calling NotifyAuthenticationStateChanged...");
                AuthStateProvider.NotifyAuthenticationStateChanged();

                await JSRuntime.InvokeVoidAsync("console.log", "[MainLayout] NotifyAuthenticationStateChanged completed");

                // Small delay to allow the notification to propagate
                await Task.Delay(50);

                // Trigger re-render to update AuthorizeView components
                await JSRuntime.InvokeVoidAsync("console.log", "[MainLayout] Calling StateHasChanged...");
                StateHasChanged();
                await JSRuntime.InvokeVoidAsync("console.log", "[MainLayout] OnAfterRenderAsync completed");
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("console.error", $"[MainLayout] Error in OnAfterRenderAsync: {ex.Message}");
            }
        }
    }

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}
