{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "Grpc": "Debug",
      "Sorcha.Peer": "Debug"
    }
  },
  "PeerService": {
    "NodeId": "peer-dev-001",
    "PublicAddress": "",
    "Port": 5003,
    "EnableTls": false,
    "StunServers": [
      "stun.l.google.com:19302",
      "stun1.l.google.com:19302"
    ],
    "BootstrapNodes": [],
    "EnablePeerDiscovery": true,
    "MaxPeers": 50,
    "CentralNode": {
      "IsCentralNode": false,
      "ExpectedHostnamePattern": "*.sorcha.dev",
      "ValidateHostname": false,
      "CentralNodes": []
    },
    "SystemRegister": {
      "PeriodicSyncIntervalMinutes": 5,
      "HeartbeatIntervalSeconds": 30,
      "HeartbeatTimeoutSeconds": 30,
      "MaxRetryAttempts": 10
    }
  },
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "sorcha_system_register_dev"
  }
}
