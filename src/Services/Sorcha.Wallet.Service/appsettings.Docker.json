{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Sorcha.Wallet": "Information",
      "Sorcha.Wallet.Core.Encryption": "Information"
    }
  },

  // Production Encryption Configuration for Docker/Linux Containers
  // Uses LinuxSecretService with file-based fallback (Docker containers don't have D-Bus access)
  "EncryptionProvider": {
    "Type": "LinuxSecretService",
    "DefaultKeyId": "wallet-master-key-2025",
    "LinuxSecretService": {
      "ServiceName": "sorcha-wallet-service",
      // Fallback path is always used in Docker (no Secret Service D-Bus available)
      // This directory MUST be mounted as a Docker volume for persistence
      "FallbackKeyStorePath": "/var/lib/sorcha/wallet-keys"
    }
  },

  "ConnectionStrings": {
    "wallet-db": "Host=postgres;Database=sorcha_wallet;Username=sorcha;Password=sorcha_dev_password;Timeout=30;Command Timeout=30",
    "Redis": "redis:6379"
  },

  "JwtSettings": {
    "InstallationName": "localhost",
    "SigningKey": "c29yY2hhLWRvY2tlci1kZXYta2V5LTIwMjUtbWluLTI1Ni1iaXRzLXNlY3VyZQ==",
    "AccessTokenLifetimeMinutes": 60
  }
}
