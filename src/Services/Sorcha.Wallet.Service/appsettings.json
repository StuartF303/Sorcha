  //     "KeyStorePath": "C:\\app\\keys",  // Docker volume mount point (Windows containers)
  //     "Scope": "LocalMachine"           // LocalMachine or CurrentUser
  //   }
  // }

  // OPTION 3: Linux Secret Service Provider (Production - Linux Hosts/Docker)
