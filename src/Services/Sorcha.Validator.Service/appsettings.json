{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Grpc": "Information"
    }
  },
  "AllowedHosts": "*",

  "Validator": {
    "ValidatorId": "",
    "SystemWalletId": null,
    "MaxReorgDepth": 10,
    "GrpcEndpoint": null
  },

  "Consensus": {
    "ApprovalThreshold": 0.51,
    "VoteTimeout": "00:00:30",
    "MaxRetries": 3,
    "RequireQuorum": true
  },

  "MemPool": {
    "MaxSize": 10000,
    "DefaultTTL": "01:00:00",
    "HighPriorityQuota": 0.10,
    "CleanupInterval": "00:05:00"
  },

  "DocketBuild": {
    "TimeThreshold": "00:00:10",
    "SizeThreshold": 50,
    "MaxTransactionsPerDocket": 100,
    "AllowEmptyDockets": false
  },

  "GrpcClients": {
    "WalletService": {
      "Address": "https://localhost:7084"
    },
    "PeerService": {
      "Address": "https://localhost:7085"
    },
    "RegisterService": {
      "Address": "https://localhost:7086"
    },
    "BlueprintService": {
      "Address": "https://localhost:7087"
    }
  },

  "Redis": {
    "ConnectionString": "localhost:6379"
  }
}
