{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Dashboard": {
    "AspireDashboardUrl": "http://localhost:15888",
    "ShowAspireLink": true
  },
  "Services": {
    "Blueprint": {
      "Url": "http://blueprint-service:8080"
    },
    "Wallet": {
      "Url": "http://wallet-service:8080"
    },
    "Register": {
