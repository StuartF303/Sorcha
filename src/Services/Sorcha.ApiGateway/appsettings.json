{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Dashboard": {
    "AspireDashboardUrl": "http://localhost:15888",
    "ShowAspireLink": true
  },
  "Services": {
    "Blueprint": {
      "Url": "http://blueprint-service:8080"
    },
    "Wallet": {
      "Url": "http://wallet-service:8080"
    },
    "Register": {
      "Url": "http://register-service:8080"
    },
    "Tenant": {
      "Url": "http://tenant-service:8080"
    },
    "Peer": {
      "Url": "http://peer-service:8080"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "blueprint-route": {
        "ClusterId": "blueprint-cluster",
        "Match": {
          "Path": "/api/blueprint/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "blueprint-status-route": {
        "ClusterId": "blueprint-cluster",
        "Match": {
          "Path": "/api/blueprint/status"
        },
        "Transforms": [
          {
            "PathPattern": "/api/health"
          }
        ]
      },
      "peer-route": {
        "ClusterId": "peer-cluster",
        "Match": {
          "Path": "/api/peer/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "peer-status-route": {
        "ClusterId": "peer-cluster",
        "Match": {
          "Path": "/api/peer/status"
        },
        "Transforms": [
          {
            "PathPattern": "/api/health"
          }
        ]
      },
      "wallet-route": {
        "ClusterId": "wallet-cluster",
        "Match": {
          "Path": "/api/wallet/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/v1/{**catch-all}"
          }
        ]
      },
      "wallet-status-route": {
        "ClusterId": "wallet-cluster",
        "Match": {
          "Path": "/api/wallet/status"
        },
        "Transforms": [
          {
            "PathPattern": "/health"
          }
        ]
      },
      "register-route": {
        "ClusterId": "register-cluster",
        "Match": {
          "Path": "/api/register/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "register-status-route": {
        "ClusterId": "register-cluster",
        "Match": {
          "Path": "/api/register/status"
        },
        "Transforms": [
          {
            "PathPattern": "/api/health"
          }
        ]
      },
      "tenant-route": {
        "ClusterId": "tenant-cluster",
        "Match": {
          "Path": "/api/tenant/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "tenant-status-route": {
        "ClusterId": "tenant-cluster",
        "Match": {
          "Path": "/api/tenant/status"
        },
        "Transforms": [
          {
            "PathPattern": "/api/health"
          }
        ]
      }
    },
    "Clusters": {
      "blueprint-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://blueprint-service:8080"
          }
        }
      },
      "peer-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://peer-service:8080"
          }
        }
      },
      "wallet-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://wallet-service:8080"
          }
        }
      },
      "register-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://register-service:8080"
          }
        }
      },
      "tenant-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://tenant-service:8080"
          }
        }
      }
    }
  }
}
