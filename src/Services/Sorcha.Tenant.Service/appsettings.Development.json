{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },

  "ConnectionStrings": {
    "TenantDatabase": "Host=host.docker.internal;Port=5432;Database=sorcha_tenant;Username=sorcha;Password=sorcha_dev_password;Include Error Detail=true"
  },

  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "SorchaTenantDev:"
  },

  "JwtSettings": {
    "Issuer": "https://localhost:7080",
    "Audience": [
      "https://localhost:7081",
      "https://localhost:7082",
      "https://localhost:7083"
    ],
    "AccessTokenLifetimeMinutes": 60,
    "RefreshTokenLifetimeMinutes": 1440,
    "SigningKeySource": "UserSecrets"
  },

  "Fido2": {
    "ServerDomain": "localhost",
    "ServerName": "Sorcha (Development)",
    "Origins": [
      "https://localhost:7080",
      "https://localhost:7083"
    ],
    "TimestampDriftTolerance": 300000
  },

  "AzureKeyVault": {
    "Enabled": false
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Information"
      }
    }
  },

  "OpenTelemetry": {
    "ZipkinEndpoint": "http://localhost:9411/api/v2/spans"
  },

  "RateLimiting": {
    "EnableRateLimiting": false
  }
}
