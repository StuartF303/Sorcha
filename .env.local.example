# Sorcha Platform - Service Principal Credentials
# Generated: 2025-12-13
# ⚠️ DEVELOPMENT ONLY - DO NOT USE IN PRODUCTION
#
# IMPORTANT: Copy this file to .env.local and keep it secure
# The .env.local file is in .gitignore and will not be committed
#
# These credentials were generated during database bootstrap seeding
# and will remain valid until the database is reset.

# =============================================================================
# Default Organization & Admin User
# =============================================================================

SORCHA_ORG_ID=00000000-0000-0000-0000-000000000001
SORCHA_ORG_NAME=Sorcha Local
SORCHA_ORG_SUBDOMAIN=sorcha-local

SORCHA_ADMIN_USER_ID=00000000-0000-0000-0001-000000000001
SORCHA_ADMIN_EMAIL=admin@sorcha.local
SORCHA_ADMIN_PASSWORD=Dev_Pass_2025!

# =============================================================================
# Service Principal Credentials
# =============================================================================

# Blueprint Service (ID: 00000000-0000-0000-0002-000000000001)
BLUEPRINT_SERVICE_CLIENT_ID=service-blueprint
BLUEPRINT_SERVICE_CLIENT_SECRET=<REPLACE_WITH_SECRET_FROM_LOGS>
BLUEPRINT_SERVICE_SCOPES=blueprints:read,blueprints:write,wallets:sign,register:write

# Wallet Service (ID: 00000000-0000-0000-0002-000000000002)
WALLET_SERVICE_CLIENT_ID=service-wallet
WALLET_SERVICE_CLIENT_SECRET=<REPLACE_WITH_SECRET_FROM_LOGS>
WALLET_SERVICE_SCOPES=wallets:read,wallets:write,wallets:sign,wallets:encrypt,wallets:decrypt

# Register Service (ID: 00000000-0000-0000-0002-000000000003)
REGISTER_SERVICE_CLIENT_ID=service-register
REGISTER_SERVICE_CLIENT_SECRET=<REPLACE_WITH_SECRET_FROM_LOGS>
REGISTER_SERVICE_SCOPES=registers:read,registers:write,registers:query

# Peer Service (ID: 00000000-0000-0000-0002-000000000004)
PEER_SERVICE_CLIENT_ID=service-peer
PEER_SERVICE_CLIENT_SECRET=<REPLACE_WITH_SECRET_FROM_LOGS>
PEER_SERVICE_SCOPES=peers:read,peers:write,registers:read

# =============================================================================
# Service Endpoints
# =============================================================================

TENANT_SERVICE_URL=https://localhost:7080
BLUEPRINT_SERVICE_URL=https://localhost:7081
WALLET_SERVICE_URL=https://localhost:13507
REGISTER_SERVICE_URL=https://localhost:7290
PEER_SERVICE_URL=https://localhost:7002

# =============================================================================
# Database Connections (Development)
# =============================================================================

# PostgreSQL (Tenant Service)
TENANT_DB_CONNECTION=Host=host.docker.internal;Port=5432;Database=sorcha_tenant;Username=sorcha;Password=sorcha_dev_password

# PostgreSQL (Wallet Service)
WALLET_DB_CONNECTION=Host=host.docker.internal;Port=5432;Database=sorcha;Username=sorcha;Password=sorcha_dev_password

# MongoDB (Register Service)
REGISTER_DB_CONNECTION=mongodb://sorcha:sorcha_dev_password@localhost:27017

# Redis (Shared)
REDIS_CONNECTION=localhost:6379

# =============================================================================
# JWT Configuration (Development)
# =============================================================================

JWT_ISSUER=https://localhost:7080
JWT_AUDIENCE=https://localhost:7081,https://localhost:7082,https://localhost:7083
JWT_SIGNING_KEY=DevelopmentSigningKey_MinimumLength32Characters_ForTestingOnly
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_MINUTES=1440

# =============================================================================
# Usage Instructions
# =============================================================================
#
# 1. Copy this file to .env.local
# 2. Replace <REPLACE_WITH_SECRET_FROM_LOGS> with actual secrets from Tenant Service startup logs
# 3. Use these credentials to authenticate services
# 4. NEVER commit .env.local to source control
#
# To get a service token:
# POST https://localhost:7080/api/service-auth/token
# Content-Type: application/x-www-form-urlencoded
#
# grant_type=client_credentials&client_id=service-blueprint&client_secret=YOUR_SECRET
#
